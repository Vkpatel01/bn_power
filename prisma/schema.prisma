datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum PaymentMethod {
  ONLINE
  CASH
  OTHER
}

enum PaymentStatus {
  SUCCESS
  FAILED
}

model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String   // hashed password
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WorkOrder {
  id              String       @id @default(cuid())
  workOrderNumber String       @unique
  workOrderDate   DateTime
  clientName      String
  location        String?
  workDescription String
  billAmount      Float
  gstAmount       Float
  totalAmount     Float
  status          String       @default("PENDING")
  remarks         String?
  remainingAmount Float        @default(0)
  invoices        Invoice[]
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

model Invoice {
  id                   String     @id @default(cuid())
  invoiceNo            String     @unique
  workOrderId          String
  invoiceDate          DateTime
  billingAmount        Float
  taxType              String?
  igstAmount           Float      @default(0)
  cgstAmount           Float      @default(0)
  sgstAmount           Float      @default(0)
  totalBillingAmount   Float
  tdsAmount            Float      @default(0)
  netPayAmount         Float
  remainingAmount      Float      @default(0)
  remarks              String?
  workOrder            WorkOrder  @relation(fields: [workOrderId], references: [id])
  payments             PaymentReceived[]
  createdAt            DateTime   @default(now())
  updatedAt            DateTime   @updatedAt
}

model PaymentReceived {
  id                     String        @id @default(cuid())
  invoiceId              String
  invoiceDate            DateTime?
  paymentDate            DateTime
  paymentAmount          Float
  paymentMode            PaymentMethod
  transactionReference   String?
  balanceAfterPayment    Float
  remarks                String?
  paymentStatus          PaymentStatus @default(SUCCESS)

  invoice Invoice @relation(fields: [invoiceId], references: [id])
  createdAt DateTime @default(now())
}
